@model Gallery1.Models.Location
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Новый автор</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Название локации:</label>
        @Html.TextBoxFor(model => model.LocationName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Описание:</label>
        @Html.TextAreaFor(model => model.LocationDescription, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Тип локации:</label>
        @Html.TextBoxFor(model => model.TypeLocationId, new { @class = "form-control" })
    </div>
 
    <div>
        @Html.ActionLink("Создать город", "CreateCity")<br />
        <label>Введите id города</label>
        @Html.TextBoxFor(model => model.CityId, new { @class = "form-control" })
    </div><br />

    <input type="submit" value="Добавить" class="btn btn-primary" />
}
