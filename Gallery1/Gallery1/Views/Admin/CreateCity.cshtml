@model Gallery1.Models.City
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Новый автор</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Название города:</label>
        @Html.TextBoxFor(model => model.CityName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Регион:</label>
        @Html.TextBoxFor(model => model.Region, new { @class = "form-control" })
    </div>

    <div>
        @Html.ActionLink("Создать страну", "CreateCountry")<br />
        <label>Введите id страны</label>
        @Html.TextBoxFor(model => model.CountryId, new { @class = "form-control" })
    </div><br />

    <input type="submit" value="Добавить" class="btn btn-primary" />
}
