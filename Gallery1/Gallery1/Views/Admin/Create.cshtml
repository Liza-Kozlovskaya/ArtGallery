<link href="~/Content/StyleAdminPageCreate.css" rel="stylesheet" />
@model Gallery1.Models.ArtWork

@{
    ViewBag.Title = "Create";
}

<h2>Новый арт</h2>

@using (Html.BeginForm())
{
    <div>
        <div class="form-group">
            <label>Название арта:</label>
            @Html.TextBoxFor(model => model.WorkName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Оригинальное название арта:</label>
            @Html.TextBoxFor(model => model.OriginWorkName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Дата создания:</label>
            @Html.TextBoxFor(model => model.CreationDate, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Описание:</label>
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Размер:</label>
            @Html.TextBoxFor(model => model.Size, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Цена:</label>
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        </div>
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
    <div class="first_col">
        <div class="form-group">
            @Html.ActionLink("Создать нового автора  ", "CreateAuthor")<br />
            <label>Автор:</label>
            @Html.TextBoxFor(model => model.AuthorId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.ActionLink("Создать новый тип  ", "CreateType")<br />
            <label>Тип:</label>
            @Html.TextBoxFor(model => model.TypeId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.ActionLink("Создать новый жанр  ", "CreateGenre")<br />
            <label>Жанр:</label>
            @Html.TextBoxFor(model => model.GenreId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.ActionLink("Создать новую технологию  ", "CreateTechnique")<br />
            <label>Техника:</label>
            @Html.TextBoxFor(model => model.TechniqueId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.ActionLink("Создать новую локацию  ", "CreateLocation")<br />
            <label>Локация:</label>
            @Html.TextBoxFor(model => model.LocationId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.ActionLink("Создать новое фото", "UploadPhoto", "PhotoArt")<br />
            <label>Фото:</label>
            @Html.TextBoxFor(model => model.PhotoArtId, new { @class = "form-control" })
        </div>
    </div>
}
