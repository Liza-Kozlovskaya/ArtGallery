@model Gallery1.Models.Country
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Новый автор</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Название страны:</label>
        @Html.TextBoxFor(model => model.CountryName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Описание:</label>
        @Html.TextAreaFor(model => model.DescriptionCountry, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Столица:</label>
        @Html.TextBoxFor(model => model.Capital, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Язык:</label>
        @Html.TextBoxFor(model => model.Language, new { @class = "form-control" })
    </div><br />

    <input type="submit" value="Отправить" class="btn btn-primary" />
}