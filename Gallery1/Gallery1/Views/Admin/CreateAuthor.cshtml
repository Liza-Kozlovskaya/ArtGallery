@model Gallery1.Models.Author
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Новый автор</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Имя автора:</label>
        @Html.TextBoxFor(model => model.NameAuthor, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Псевдоним:</label>
        @Html.TextBoxFor(model => model.Pseudonum, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Дата рождения:</label>
        @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label>Дата смерти:</label>
        @Html.TextBoxFor(model => model.DateOfDeath, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Биография:</label>
        @Html.TextAreaFor(model => model.Biography, new { @class = "form-control", rows = 6 })
    </div>

    <div class="form-group">
        <label>Образование:</label>
        @Html.TextAreaFor(model => model.Education, new { @class = "form-control", rows = 6 })
    </div>

    <div class="form-group">
        <label>Пол:</label>
        @Html.TextBoxFor(model => model.Sex, new { @class = "form-control" })
    </div>
    <input type="submit" value="Отправить" class="btn btn-primary" />
}