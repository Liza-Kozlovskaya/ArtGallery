@model Gallery1.Models.Genre
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Новый автор</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Название страны:</label>
        @Html.TextBoxFor(model => model.GenreName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Описание:</label>
        @Html.TextAreaFor(model => model.GenreDescription, new { @class = "form-control" })
    </div><br />

    <input type="submit" value="Отправить" class="btn btn-primary" />
}