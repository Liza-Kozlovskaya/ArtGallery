@model Gallery1.Models.ArtWork
<link href="~/Content/StylePersonalPage.css" rel="stylesheet" />

@{
    ViewBag.Title = "ViewArt";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2> @Model.WorkName</h2>
        <h5> @Html.DisplayFor(model => model.Type.TypeName)</h5>
        <hr />
        <h4>About Art</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.WorkName, "Название", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.WorkName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OriginWorkName, "Оригинальное название", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OriginWorkName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreationDate, "Дата создания", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CreationDate, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, "Описание", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 6 })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Size, "Размер", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Size, new { @class = "form-control " })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, "Предполагаемая цена", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger readonly" })
            </div>
        </div>
        <br />
        <div class="image">
            <img src="~/image/555.jpeg" />
        </div>
    </div>
}


<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<div class="container">
    <div class="panel panel-default">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row toggle" id="dropdown-detail-1" data-toggle="detail-1">
                    <div class="col-xs-10">
                        About Author
                    </div>
                    <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                </div>
                <div id="detail-1">
                    <hr>
                    <div class="container">
                        <div class="fluid-row">
                            <b>Имя автора: </b> @Html.DisplayFor(model => model.Author.NameAuthor)  <br />
                            <b>Псевдоним: </b> @Html.DisplayFor(model => model.Author.Pseudonum)  <br />
                            <b>Годы жизни: </b> @Html.DisplayFor(model => model.Author.DateOfBirth) - @Html.DisplayFor(model => model.Author.DateOfDeath)  <br />
                            <b>Образование: </b> @Html.DisplayFor(model => model.Author.Education)  <br />
                            <b>Биография: </b> @Html.DisplayFor(model => model.Author.Biography)  <br />
                        </div>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row toggle" id="dropdown-detail-2" data-toggle="detail-2">
                    <div class="col-xs-10">
                        About Type
                    </div>
                    <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                </div>
                <div id="detail-2">
                    <hr>
                    <div class="container">
                        <div class="fluid-row">
                            <b>Название типа: </b> @Html.DisplayFor(model => model.Type.TypeName) <br />
                            <b>Дата зарождения типа: </b> @Html.DisplayFor(model => model.Type.TypeDate) <br />
                        </div>
                    </div>
                </div>
                <li class="list-group-item">
                    <div class="row toggle" id="dropdown-detail-3" data-toggle="detail-3">
                        <div class="col-xs-10">
                            About Genre
                        </div>
                        <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                    </div>
                    <div id="detail-3">
                        <hr>
                        <div class="container">
                            <div class="fluid-row">
                                <b>Название жанра: </b> @Html.DisplayFor(model => model.Genre.GenreName) <br />
                                <b>Название жанра: </b> @Html.DisplayFor(model => model.Genre.GenreDescription) <br />
                            </div>
                        </div>
                    </div>
                </li>
            <li class="list-group-item">
                <div class="row toggle" id="dropdown-detail-4" data-toggle="detail-4">
                    <div class="col-xs-10">
                        About Location
                    </div>
                    <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                </div>
                <div id="detail-4">
                    <hr>
                    <div class="container">
                        <div class="fluid-row">
                            <b>Название места: </b> @Html.DisplayFor(model => model.Location.LocationName)<br />
                            <b>Тип места: </b> @Html.DisplayFor(model => model.Location.TypeLocation.NameType)<br />
                            <b>Описание: </b> @Html.DisplayFor(model => model.Location.LocationDescription)<br />
                        </div>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row toggle" id="dropdown-detail-5" data-toggle="detail-5">
                    <div class="col-xs-10">
                        About Country and City
                    </div>
                    <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                </div>
                <div id="detail-5">
                    <hr>
                    <div class="container">
                        <div class="fluid-row">
                            <b>Название страны: </b> @Html.DisplayFor(model => model.Location.City.Country.CountryName)<br />
                            <b>Описание: </b> @Html.DisplayFor(model => model.Location.City.Country.DescriptionCountry)<br />
                            <b>Столица: </b> @Html.DisplayFor(model => model.Location.City.Country.Capital)<br />
                            <b>Описание: </b> @Html.DisplayFor(model => model.Location.City.Country.Language)<br />

                            <b>Название города: </b> @Html.DisplayFor(model => model.Location.City.CityName)<br />
                            <b>Регион: </b> @Html.DisplayFor(model => model.Location.City.Region)<br />
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('[id^=detail-]').hide();
        $('.toggle').click(function () {
            $input = $(this);
            $target = $('#' + $input.attr('data-toggle'));
            $target.slideToggle();
            if ($input.find('.col-xs-2 i').attr('class') == "fa fa-chevron-down pull-right") {
                $input.find('.col-xs-2 i').removeClass('fa-chevron-down');
                $input.find('.col-xs-2 i').addClass('fa-chevron-up');
            }
            else if ($input.find('.col-xs-2 i').attr('class') == "fa pull-right fa-chevron-up") {
                $input.find('.col-xs-2 i').removeClass('fa-chevron-up');
                $input.find('.col-xs-2 i').addClass('fa-chevron-down');
            }
            else if ($input.find('.col-xs-2 i').attr('class') == "fa pull-right fa-chevron-down") {
                $input.find('.col-xs-2 i').removeClass('fa-chevron-down');
                $input.find('.col-xs-2 i').addClass('fa-chevron-up');
            }

        });
    });
</script>

