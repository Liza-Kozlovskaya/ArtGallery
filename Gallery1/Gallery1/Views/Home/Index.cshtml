<h2>Представленные работы</h2>
    <p class="search">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <b>Search By:</b> @Html.RadioButton("SearchBy", "Name") <text>Name</text>
            @Html.RadioButton("SearchBy", "Type") <text>Type</text> <br />
            @Html.TextBox("search") <input type="submit" value="Search" />
        }

    </p>
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="column">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="our-team-main">
                            <div class="team-front">
                                <img src="http://placehold.it/110x110/9c27b0/fff?text=Dilip" class="img-fluid" />
                                <h3>@Html.DisplayFor(modelItem => item.WorkName)</h3>
                                <p>@Html.DisplayFor(modelItem => item.OriginWorkName)</p>
                                @if (item.Type.TypeName == "Скульптура")
                                {
                                    <p style="color: rgb(67, 210, 28)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Литература")
                                {
                                    <p style="color: rgb(10, 88, 218)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Музыка")
                                {
                                    <p style="color: rgb(255, 0, 0)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Кинематограф")
                                {
                                    <p style="color: rgb(233, 148, 15)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Архитектура")
                                {
                                    <p style="color: rgb(166, 16, 237)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Фотография")
                                {
                                    <p style="color: rgb(250, 28, 94)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Живопись")
                                {
                                    <p style="color: rgb(13, 188, 234)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Театр")
                                {
                                    <p style="color: rgb(10, 255, 180)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Хореография")
                                {
                                    <p style="color: rgb(179, 255, 0)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                                @if (item.Type.TypeName == "Современное искусство")
                                {
                                    <p style="color: rgb(223, 55, 186)">@Html.DisplayFor(modelItem => item.Type.TypeName)</p>
                                }
                            </div>
                            <div class="team-back">
                                <span>
                                    @*@Html.DisplayFor(modelItem => item.Description)*@
                                    @Html.ActionLink(item.Description, "Reade", new { item.Id })
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

